.filter-highlighted(ng-mouseleave="vm.toggleClose()")
    a.current-filter(
        href="#"
        ng-click="vm.toggleOpen()"
    ) {{vm.currentText()}}
        span.icon-arrow-bottom
  

    ul.filter-list(ng-if="vm.is_open")
        li(ng-click="vm.orderBy('week')") this week
        li(ng-click="vm.orderBy('month')") this month
        li(ng-click="vm.orderBy('year')") this year
        li(ng-click="vm.orderBy('all')") all time
